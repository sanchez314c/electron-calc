{
  "name": "electron-calculator",
  "version": "1.0.0",
  "description": "A simple clean modern dark-mode Electron-based Calculator app for MacOS, Windows and Linux",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "build:maximum": "./scripts/build-compile-dist.sh --platforms all --architectures all",
    "build:clean": "./scripts/build-compile-dist.sh --skip-cleanup --skip-bloat-check",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "bloat-check": "./scripts/bloat-check.sh",
    "lint": "eslint src --ext .js,.jsx",
    "format": "prettier --write src/**/*.{js,jsx,json,css,md}",
    "clean": "rm -rf dist build out release",
    "temp-clean": "find . -name '*.tmp' -type f -delete && find . -name '*.temp' -type f -delete",
    "deps:install": "npm ci --prefer-offline --no-audit",
    "deps:update": "npm update",
    "deps:audit": "npm audit --audit-level=moderate",
    "prepare-release": "npm run clean && npm run deps:install && npm run test && npm run build:maximum",
    "validate:build": "./scripts/validate-build.sh",
    "format:check": "prettier --check src/**/*.{js,jsx,json,css,md}"
  },
  "keywords": [
    "calculator",
    "electron",
    "cross-platform",
    "dark-mode",
    "desktop-app",
    "utilities"
  ],
  "author": {
    "name": "SuperClaude",
    "email": "support@superclaude.ai"
  },
  "homepage": "https://superclaude.ai",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "electron": "^39.0.0",
    "electron-builder": "^24.13.3",
    "jest": "^29.7.0",
    "jsdom": "^22.1.0"
  },
  "build": {
    "appId": "com.claude.calculator",
    "productName": "Calculator",
    "directories": {
      "output": "dist",
      "buildResources": "build-resources"
    },
    "files": [
      "src/main/index.js",
      "src/renderer/index.html",
      "src/renderer/styles/style.css",
      "src/renderer/utils/renderer.js",
      "src/preload/index.js",
      "assets/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build_resources/Icons/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "pkg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": "build-resources/entitlements.mac.plist",
      "entitlementsInherit": "build-resources/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "msi",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build_resources/Icons/icon.png"
    },
    "linux": {
      "category": "Utility",
      "maintainer": "SuperClaude <support@superclaude.ai>",
      "icon": "build_resources/Icons/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64",
            "ia32",
            "armv7l"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64",
            "ia32",
            "armv7l"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64",
            "ia32"
          ]
        },
        {
          "target": "snap",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64",
            "arm64",
            "ia32",
            "armv7l"
          ]
        },
        {
          "target": "pacman",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "desktop": {
        "entry": {
          "Name": "Calculator",
          "Comment": "A simple clean modern dark-mode calculator",
          "Keywords": "calculator;math;utility;"
        }
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "installerIcon": "build_resources/Icons/icon.png",
      "uninstallerIcon": "build_resources/Icons/icon.png",
      "installerHeaderIcon": "build_resources/Icons/icon.png",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Calculator"
    },
    "deb": {
      "depends": [
        "libgtk-3-0",
        "libnotify4",
        "libnss3",
        "libxss1",
        "libxtst6",
        "xdg-utils",
        "libatspi2.0-0",
        "libdrm2",
        "libxcomposite1",
        "libxdamage1",
        "libxrandr2",
        "libgbm1",
        "libxkbcommon0",
        "libasound2"
      ]
    },
    "snap": {
      "plugs": [
        "default",
        "desktop",
        "desktop-legacy",
        "home",
        "x11",
        "unity7",
        "browser-support",
        "network",
        "gsettings",
        "audio-playback",
        "pulseaudio",
        "opengl"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "superclaude",
        "repo": "electron-calculator"
      }
    ],
    "compression": "maximum"
  }
}
