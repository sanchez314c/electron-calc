{
  "name": "electron-calculator",
  "version": "1.0.0",
  "description": "A simple clean modern dark-mode Electron-based Calculator app for MacOS, Windows and Linux",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest"
  },
  "keywords": [
    "calculator",
    "electron",
    "cross-platform",
    "dark-mode",
    "desktop-app",
    "utilities"
  ],
  "author": {
    "name": "SuperClaude",
    "email": "support@superclaude.ai"
  },
  "homepage": "https://superclaude.ai",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.claude.calculator",
    "productName": "Calculator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main.js",
      "src/index.html",
      "src/style.css",
      "src/renderer.js",
      "src/preload.js",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "resources/icons/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "identity": null,
      "hardenedRuntime": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ]
    },
    "linux": {
      "category": "Utility",
      "maintainer": "SuperClaude <support@superclaude.ai>",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}